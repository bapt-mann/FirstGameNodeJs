{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",       // INDISPENSABLE pour Node.js
    "moduleResolution": "node",
    "outDir": "./dist",         // Le serveur compilé ira dans dist/
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    // On enlève "dom" pour éviter d'utiliser 'document' par erreur côté serveur
    "lib": ["es6"]              
  },
  "include": ["src/**/*", "server.ts"], // Tout le serveur
  "exclude": ["public/**/*"]            // On NE touche PAS au client
}