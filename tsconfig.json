{
  "compilerOptions": {
    "target": "es6",            // Version de JS en sortie
    "module": "commonjs",       // Format de module pour Node
    "moduleResolution": "node",       
    "outDir": "./dist",         // Où le code compilé ira
    "rootDir": "./",            // Où est ton code source
    "strict": true,             // Active le mode strict (typage fort)
    "esModuleInterop": true     // Meilleure compatibilité des imports
  }
}